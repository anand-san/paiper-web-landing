---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<!doctype html>
<html lang="en">
	<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
		<main class="flex items-center justify-center h-screen">
			<div class="max-w-2xl w-full text-center">
			  <h1 class="text-4xl md:text-5xl font-bold mb-4">
				Stop Drowning in Papers
			  </h1>
			  <h1 class="text-3xl md:text-4xl font-bold mb-8">
				Start Finding in Seconds
			  </h1>
			  <p class="text-lg mb-8 max-w-xl mx-auto">
				Transform your mountain of documents into an intelligent, searchable digital library.
				Never lose another important paper again. Become an early adopter and transform your
				document mess into searchable, actionable intelligence.
			  </p>
			  <h3 class="text-2xl font-bold text-indigo-700 mb-6">
				Join the Early Access List
			  </h3>
			  <form class="flex flex-col md:flex-row gap-4 justify-center">
				<input
				  type="email"
				  disabled
				  placeholder="Enter your email"
				  class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 flex-grow max-w-md"
				/>
				<button
				disabled
				  type="submit"
				  class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 transition-colors duration-300"
				>
				  Sign Up
				</button>
			  </form>
			</div>
			</main>	
	</BaseLayout>
</html>
