---
import BlurFade from "@/components/ui/blur-fade";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseLayout from "../layouts/BaseLayout.astro";
import { cn } from "@/lib/utils";
import { Input } from "@/components/ui/input";
import Particles from "@/components/ui/particles";
---

<!doctype html>
<style>
  .top-navbar {
    position: sticky;
    top: 16px;
    z-index: 10;
    margin-left: 96px;
    margin-right: 96px;
    transition: top 0.3s;
    border-radius: 64px !important;
    transition: transform 500ms ease-in-out;
  }
  .top-navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;

    > :is(:first-child) {
      margin-left: 16px;
    }

    > :is(:last-child) {
      margin-right: 12px;
    }
    .items {
      display: flex;
      align-items: center;
      gap: 16px;
    }
  }
</style>
<html lang="en">
  <BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <div class="top-navbar">
      <div class={"top-navbar-container"}>
        <a href="/">
          <img
            src="favicon.png"
            alt="logo"
            width={48}
            height={48}
            class="pointer-events-none dark:invert"
          />
        </a>
        <!-- <div class={"top-navbar-items"}>
          <a href="/"> Home </a>
        </div> -->
      </div>
    </div>

    <main class="flex items-center justify-center h-screen">
      <div class="max-w-2xl w-full text-center">
        <BlurFade delay={0.25} inView client:load>
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            Stop Drowning in Papers
          </h1>
        </BlurFade>
        <BlurFade delay={0.25 * 2} inView client:load>
          <h1 class="text-4xl md:text-5xl font-bold mb-8">
            Start Finding in Seconds
          </h1>
        </BlurFade>
        <BlurFade delay={0.25 * 3} inView client:load>
          <p class="text-lg mb-8 max-w-xl mx-auto text-gray-400">
            Transform your mountain of documents into an intelligent, searchable
            digital library. Never lose another important paper again. Become an
            early adopter and transform your document mess into searchable,
            actionable intelligence.
          </p>
        </BlurFade>
        <BlurFade delay={0.25 * 4} inView client:load>
          <h3 class="text-2xl font-bold mb-6">Join the Early Access List</h3>
        </BlurFade>
        <BlurFade delay={0.25 * 5} inView client:load>
          <div class="flex flex-col md:flex-row gap-4 justify-center">
            <Input
              type="email"
              disabled
              placeholder="Enter your email"
              className="cursor-not-allowed px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 flex-grow max-w-md"
            />
          </div>
        </BlurFade>
      </div>
      <!-- <DotPattern
        className={cn(
          "[mask-image:radial-gradient(300px_circle_at_center,white,transparent)]",
        )}
      /> -->
      <Particles
        className="absolute inset-0"
        quantity={200}
        ease={80}
        color={"#000"}
        refresh
        client:load
      />
    </main>
  </BaseLayout>
</html>
